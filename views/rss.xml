{{ block "rss" . }}
<rss version="2.0">
  <channel>
    <title>{{ .Title }}</title>
    <link>www.example.com</link>
    <description>{{ .Description }}</description>
    <language>en-us</language>
    <image>
      <url>www.example.com/images/image.png</url>
      <title>Image Title</title>
      <link>www.example.com</link>
      <width>320</width>
      <height>308</height>
    </image>
    {{ range .Thumbs }}{{ template "rss-item" . }}{{ end }}
  </channel>
</rss>
{{ end }}

{{ block "rss-item" . }}
<item>
  <title>{{ .Title }}</title>
  <link>{{ .Link }}</link>
  <pubDate>{{ .Date }}</pubDate>
  <description>{{ .Summary }}</description>
</item>
{{ end }}
